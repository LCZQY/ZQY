
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>添加问卷</title>
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
    <link href="~/lib/layer/layer.css" rel="stylesheet" />
    @*<link href="~/css/survey.css" rel="stylesheet" />*@

</head>
<body>
    <div class="layui-container">
        <div class="row">
            <div class="layui-col-md12">
                <div class="header layui-col-md12">
                    <div class="logo">
                        <h1><a href="//www.taobao.com"></a></h1>
                        <h2 id="wenjuan" data-phase-id="r_p_registration">添加问卷</h2>
                    </div>
                </div>



                <form method="post" class="layui-form" action="">
                    <div class="layui-col-md12">
                        <div class="steps steps-4">
                            <ol>
                                <li class="active"><div class="i"><i>1</i></div><span class="tsl" data-phase-id="r_p_createAccount">添加问卷信息</span></li>
                                @*<li><div><i>2</i></div><span data-phase-id="r_p_fillUserInfo">设置问答形式</span></li>
                                    <li><div><i>3</i></div><span data-phase-id="r_p_fillUserInfo">设置问卷排版</span></li>
                                    <li><div><i>4</i></div><span data-phase-id="r_p_regSuc">添加完成</span></li>*@
                            </ol>
                        </div>
                    </div>
                    <hr style="height:3px;" />
                    <div class="content layui-col-md12 ">
                        <div class="tab-items " id="firstStep">
                            <div class="layui-form-item">
                                <label class="layui-form-label">标题：</label>
                                <div class="layui-input-block">
                                    <input type="text" name="title" required lay-verify="required" placeholder="请输入标题" autocomplete="off" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-form-item">
                                <label class="layui-form-label">简介：</label>
                                <div class="layui-input-block">
                                    <input type="text" name="brief" required lay-verify="required" placeholder="请输入简介" autocomplete="off" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-form-item">
                                <label class="layui-form-label">版权：</label>
                                <div class="layui-input-block">
                                    <input type="text" name="copy" required lay-verify="required" placeholder="请输入版权" autocomplete="off" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-form-item layui-col-md5">
                                <div class="layui-input-block">
                                    <input class="layui-btn layui-btn-sm layui-btn-fluid" lay-submit lay-filter="formDemo1" id="nextStep01" type="submit" value="下一步" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="tab-items" style="height:500px;" hidden="hidden">
                    <iframe id="twoStep" src="" frameborder="0" scrolling="no" style="width:100%; height:100%;"></iframe>
                </div>

            </div>
        </div>
    </div>
</body>
</html>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/layer/layer.js"></script>
<script src="~/lib/layui/layui.js"></script>
<script src="~/js/home.js"></script>
<script src="~/js/addsurvey.js"></script>
<script>

    //信息框弹出后点击不到？？？
    layer.open({
        title: [
            '我是标题',
            'background-color:#8DCE16; color:#fff;'
        ]
        , anim: 'up'
        , content: '展现的是全部结构'
        , btn: ['确认', '取消']
    });

layui.use('form', function() {
    var form = layui.form;
    //监听提交
    form.on('submit(formDemo1)', function (data) {

        ///为什么把Cookies的防伪标识也读取?????
        ajax_request({
            url: "@Url.Action("AddSurvey", "Admin")",
            data: { title: data.field.title, brief:data.field.brief, copy:data.field.copy },
            callback: function (pic) {
                console.log(pic);
                if (pic.code == 200) {
                    layui.use('layer', function () {
                        layer = layui.layer;
                        //询问框
                        layer.confirm('添加成功,您可以选择继续添加或是查看', {
                            btn: ['是否确定当前录入信息', '取消'] //按钮
                        }, function () {
                            // 直接替换成下一步
                            $("#firstStep").hide();
                            $("#twoStep").attr("src", "@Url.Action("ContentPage","Home")").parent().show();
                        });
                    });
                }else {
                    layer.open(pic.message);
                }
            }
        });
        return false;
    });
});

</script>
