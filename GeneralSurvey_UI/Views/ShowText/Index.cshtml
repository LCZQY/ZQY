@using GeneralSurvey_Utility;
@using GeneralSurvey_Data.Model;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no" />
    <title>问卷调研页</title>
    <link href="~/lib/Validform_v5.3.2/style.css" rel="stylesheet" />
    <link href="~/lib/Validform_v5.3.2/demo.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datetimepicker/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
    <link href="~/css/fileupload.css" rel="stylesheet" />
    <link href="~/css/home.css" rel="stylesheet" />


</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!--头部开始-->
                <header>
                    <div class="navbar navbar-inverse navbar-fixed-top">
                        <div class="container">
                            <div class="col-md-7 col-md-offset-2">
                                <div class="navbar-header">
                                    @{
                                        string title = HelpFormsettings.GetList().SingleOrDefault().FormTitle;
                                        <h3>@title</h3>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </header>
                <!--内容页开始-->
                <section>
                    <div class="col-md-7 col-lg-offset-2" style="margin-top:5%;">
                        @{
                            string query = HelpFormsettings.GetList().SingleOrDefault().FormNote;
                            <h3>@query</h3>
                        }
                    </div>
                    <div class="col-md-7  col-md-offset-2">
                        <form method="post" enctype="multipart/form-data" id="postForm" action="@Url.Action("Index","ShowText")">
                            <div class="form-horizontal">
                                @{
                                    var count = 0;
                                    foreach (var item in (List<Topicgroups>)ViewData["query"])
                                    {
                                        <div class="form-group">
                                            <label>@item.TopicName</label>

                                            @{
                                                switch (item.SetsettingId)
                                                {
                                                    case "001": // 多选框
                                                        <div class="col-md-12">
                                                            @{
                                                                try
                                                                {
                                                                    if (item.OptionText.IndexOf("*") > -1)
                                                                    {
                                                                        var arry = item.OptionText.Split('*');
                                                                        for (int i = 0; i < arry.Length - 1; i++)
                                                                        {
                                                                            if (i % 2 == 0)
                                                                            {
                                                                                <div class="row">
                                                                                    <div class="col-md-6">
                                                                                        <div class="checkbox">
                                                                                            <label>
                                                                                                <input type="checkbox" value="@arry[i]" name="@item.FromName" title="@arry[i]">
                                                                                                @arry[i]
                                                                                            </label>
                                                                                        </div>
                                                                                    </div>
                                                                                    <div class="col-md-6">
                                                                                        <div class="checkbox">
                                                                                            <label>
                                                                                                <input type="checkbox" value="@arry[i+1]" name="@item.FromName" title="@arry[i + 1]">
                                                                                                @arry[i + 1]
                                                                                            </label>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                                catch (Exception ex)
                                                                {
                                                                    <span>请参照本系统规则添加选项</span>
                                                                }
                                                            }
                                                            <div class="Validform_checktip"></div>
                                                        </div>
                                                        break;
                                                    case "002": //单选框
                                                        try
                                                        {
                                                            if (item.OptionText.IndexOf("*") > -1)
                                                            {
                                                                var arry = item.OptionText.Split('*');
                                                                <div class="col-md-12">
                                                                    @{ for (int i = 0; i < arry.Length; i++)
                                                                        {
                                                                            if (i % 2 == 0)
                                                                            {
                                                                                <div class="row">
                                                                                    <div class="col-md-6">
                                                                                        <label>
                                                                                            <input type="radio" value="@arry[i]" name="@item.FromName" title="@arry[i]">
                                                                                            @arry[i]
                                                                                        </label>
                                                                                    </div>
                                                                                    <div class="col-md-6">
                                                                                        <label>
                                                                                            <input type="radio" value="@arry[i + 1]" name="@item.FromName" title="@arry[i + 1]">
                                                                                            @arry[i + 1]
                                                                                        </label>
                                                                                    </div>
                                                                                </div>
                                                                            }
                                                                        }
                                                                    }
                                                                    <div class="Validform_checktip"></div>
                                                                </div>
                                                            }
                                                        }
                                                        catch (Exception el)
                                                        {
                                                            <span>请参照本系统规则添加选项</span>
                                                        }
                                                        break;
                                                    case "003": // 下拉框
                                                        <div class="col-md-12">

                                                            <select class="form-control" name="@item.FromName">
                                                                <option value="">--请选择--</option>
                                                                @{
                                                                    try
                                                                    {
                                                                        if (item.OptionText.IndexOf("*") > -1)
                                                                        {
                                                                            var arry = item.OptionText.Split('*');
                                                                            for (int i = 0; i < arry.Length; i++)
                                                                            {
                                                                                <option name="@item.FromName" value="@arry[i]">@arry[i]</option>
                                                                            }
                                                                        }
                                                                    }
                                                                    catch (Exception ex) { }
                                                                }
                                                            </select>

                                                            <div class="Validform_checktip"></div>
                                                        </div>
                                                        break;

                                                    case "004": // 多文本内容
                                                        <div class="col-md-12">
                                                            <textarea class="form-control" datatype="*1-@item.CharactersSize" name="@item.FromName" placeholder="请输入信息"></textarea>
                                                            <div class="Validform_checktip"></div>
                                                        </div>
                                                        break;
                                                    case "005": // 文件上传
                                                        if (count == 0) //只允许出现一个文件上传框
                                                        {
                                                            <div class="col-md-12">
                                                                <span class="upload">
                                                                    <input type="text" datatype="*" name="@item.FromName" class="upload-url input-sm" style="width:250px" />
                                                                    <input type="button" class="upload-btn btn-default  btn-sm" value="浏览文件" />
                                                                    <input type="file" name="files" multiple id="BlogPhoto" class="upload-input-file form-control input-sm">
                                                                </span>
                                                                <div class="Validform_checktip"></div>
                                                            </div>
                                                            count++;
                                                        }
                                                        break;
                                                    case "006": // 输入框
                                                        <div class="col-md-12">
                                                            <input type="text" class="form-control input-sm" datatype="*1-@item.CharactersSize" name="@item.FromName" id="exampleInputEmail1" placeholder="请输入信息" />
                                                            <div class="Validform_checktip"></div>
                                                        </div>
                                                        @*<div class="Validform_checktip">昵称为6~18个字符</div>*@
                                                        break;
                                                    case "007": // 时间
                                                        <div class="input-group date form_date col-md-12" data-date="" data-date-format="" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                                                            <input class="form-control input-sm" datatype="*" type="text" name="@item.FromName" value="" readonly>
                                                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                                            <div class="Validform_checktip"></div>
                                                        </div>
                                                        break;
                                                    case "008": // 地址
                                                        <div class="col-md-12">
                                                            <div class="docs-methods">
                                                                <div id="distpicker">
                                                                    <div class="col-md-4">
                                                                        <label class="sr-only" for="province10">Province</label>
                                                                        <select class="form-control input-sm" name="@item.FromName" id="province"></select>
                                                                    </div>
                                                                    <div class="col-md-4">
                                                                        <label class="sr-only" for="city10">City</label>
                                                                        <select class="form-control input-sm" name="@item.FromName" id="city"></select>
                                                                    </div>
                                                                    <div class="col-md-4">
                                                                        <label class="sr-only" for="district10">District</label>
                                                                        <select class="form-control input-sm" name="@item.FromName" id="district"></select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="Validform_checktip"></div>
                                                        </div>
                                                        break;
                                                }
                                            }
                                        </div>
                                    }
                                }
                                <div class="form-group">
                                    <div class="col-md-11" style=" text-align:center;">
                                        <input type="submit" id="mits" value="提交申请" class="btn btn-lg btn-default" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </section>
                <!--页尾开始-->
                <footer class="col-md-8 text-center" style="margin:5% 0 0 8%;">
                    @{
                        string copy = HelpFormsettings.GetList().SingleOrDefault().FormCopyright;
                        <p>   &copy; @DateTime.Now.Year - @copy</p>
                    }
                </footer>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap-datetimepicker/bootstrap-datetimepicker.js"></script>
    <script src="~/lib/bootstrap-datetimepicker/locales/bootstrap-datetimepicker.zh-CN.js"></script>
    <script src="~/lib/Validform_v5.3.2/Validform_v5.3.2_min.js"></script>
    <script src="~/lib/layui/layui.js"></script>
    <script src="~/lib/distpicker/distpicker.data.js"></script>
    <script src="~/lib/distpicker/distpicker.js"></script>
    <script src="~/lib/distpicker/main.js"></script>
    <script src="~/lib/layui/layui.js"></script>
    <script src="~/js/home.js"></script>
    <script src="~/js/showtext.js"></script>
    <script>

        var demo  =  $(document.forms[0]).Validform({
            btnSubmit: "#mits",
            btnReset: ".btn_reset",
            tiptype: 4,
            ignoreHidden: true,
            dragonfly: false,
            tipSweep: true,
            label: ".label",
            showAllError: true,
            postonce: true,
            ajaxPost: true,
            callback: function (rst) {
                if (rst.code == 200) {
                    layer.open({
                        title: ['提交成功', 'background: green; color:#fff;'], content: '请保持手机畅通，我们会主动联系您！'
                    });
                    window.location.href = "@Url.Action("Index", "ShowText")";
                }
                else {
                    layer.open({
                        title: ['提交失败', 'background: #FF4351; color:#fff;'], content: rst.code
                    });
                }
            }
        });

        demo.addRule([
            {
                ele: "select",
                datatype: "*"
            },
            {
                ele: ":radio:first",
                datatype: "*"
            },
            {
                ele: ":checkbox:first",
                datatype: "*"
            }
        ]);



        //禁止自动选择
        $("#distpicker").distpicker({
            autoSelect: false
        });
        //初始化日历控件
        $('.form_date').datetimepicker({
            format: 'yyyy-mm-dd',
            language: 'zh-CN',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });

        /*
         * 文件错误显示
         * */
        var upFileError = function () {
            $(".upload-url").val($("#BlogPhoto").val());
            var file = getNameFromPath($("#BlogPhoto").val());
            if (file != null) {
                var extension = file.substr((file.lastIndexOf('.') + 1));
                console.log(extension);
                fileTypeBool = exten(extension);
            }
            if (!fileTypeBool) {
                $("#warning").html("只能上传Word,Excel,PPt文件！");
                return false;
            }
            else {
                return true;
                $("#warning").html("");
                var size = GetFileSize('BlogPhoto');
                if (size > 20) {
                    return true;
                    //fileSizeBool = true;
                    $("#warning").html("上传文件已经超过4兆！");
                } else {
                    $("#warning").html("");
                    return false;
                    //fileSizeBool = false;
                }
            }
        }

        function doUpload() {
    var formData = new FormData($("#uploadForm")[0]);
    $.ajax({
        url: '@Url.Action("Index")',
        type: 'POST',
        data: formData,
        async: false,
        cache: false,
        contentType: false,
        processData: false,
        success: function (returndata) {
            alert(returndata);
        },
        error: function (returndata) {
            alert(returndata);
        }
    });
}

        ///文件选择框变化时，验证上传文件是否正确
        $("#BlogPhoto").change(function () {
            upFileError();
        });

        $("#mits").click(function () {

        });


    </script>
</body>
</html>
