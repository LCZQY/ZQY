
@using GeneralSurvey_Data.Model
@{
    Layout = "~/Views/Shared/_LayoutContent.cshtml";
}

<div class="layui-container">
    <div class="layui-row">
        <div class="layui-col-md12">
            <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
                <legend>编辑</legend>
                <span style="color:red;">注意：系统以题号排序，如修改排版顺序，请直接修改题号</span>
            </fieldset>

            <form class="layui-form layui-form-pane" method="post" action="@Url.Action("Edit","LayoutWeb")">
                @{
                    foreach (var item in (List<Topicgroups>)ViewData["EditData"])
                    {
                        <div hidden="hidden">
                            <input type="text" name="id" value="@item.id" autocomplete="off" class="layui-input" hidden="hidden" />
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">题号</label>
                            <div class="layui-input-block">
                                <input id="ss" class=" layui-input easyui-numberspinner" name="Stide" style="
                                       border-color: #e6e6e6;
                                       border:none;
                                       width: 100%;
                                       padding-left: 10px;
                                       border-radius: 0 2px 2px 0;
                                       height: 38px;
                                       line-height: 1.3;
                                       line-height: 38px\9;
                                       border-width: 1px;
                                       border-style: solid;
                                       background-color: #fff;"
                                       required="required" value="@item.Stide" data-options=" min:1,max:100,editable:false">               
                                @*<input type="text" name="Stide" value="@item.Stide" autocomplete="off" class="layui-input">*@
                            </div>
                        </div>

                        <div class="layui-form-item">
                            <label class="layui-form-label">题目类型</label>
                            <div class="layui-input-block">
                                <input type="text" name="SetsettingId" value="@item.SetsettingId" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">题干</label>
                            <div class="layui-input-block">
                                <input type="text" name="TopicName" value="@item.TopicName" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">长度限制</label>
                            <div class="layui-input-block">
                                <input type="text" name="CharactersSize" value="@item.CharactersSize" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">各选项值</label>
                            <div class="layui-input-block">
                                <input type="text" name="OptionText" value="@item.OptionText" autocomplete="off" class="layui-input">
                            </div>
                        </div>

                        <div class="layui-col-md-12" style="font-weight:bold;">
                            <div class="layui-form-item">
                                <button class="layui-btn layui-btn-fluid" lay-submit="" lay-filter="formDemo">保存设置</button>
                            </div>
                        </div>
                    }
                }
            </form>
        </div>


    </div>
</div>

