
@{
    Layout = null;
    @using GeneralSurvey_Utility;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>调研信息后台管理</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/lib/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />

    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
    <style>
        
    </style>
</head>
<body>
    <div class="layui-container-full">
        <div class="row">
            <div class="layui-main layui-col-md12" style=" background:rgb(57,61,73); ">
                <a href="#" class="logo" style=" margin-left: 14%;">调研信息后台管理</a>
                <!-- 顶部右侧菜单 -->
                <ul class="layui-nav top_menu layui-col-md2" style=" float:right;">
                    <li class="layui-nav-item showNotice" id="showNotice" pc>
                        <a href="javascript:;"><i class="fa fa-volume-up"></i><cite>系统公告</cite></a>
                    </li>
                    <li class="layui-nav-item" mobile>
                        <a href="javascript:;" data-url="page/user/changePwd.html"><i class="iconfont icon-shezhi1" data-icon="icon-shezhi1"></i><cite>设置</cite></a>
                    </li>
                    <li class="layui-nav-item" pc>
                        <a href="javascript:;">
                            <img src="~/Files/images/true.jpg" class="layui-circle" width="35" height="35">
                            @{ string user = Seesion.UserName == null ? "Admin" : Seesion.UserName; <cite class="userName">@user </cite> }
                        </a>
                        <dl class="layui-nav-child">
                            <dd><a href="javascript:;" data-url="page/user/userInfo.html"><i class="iconfont icon-zhanghu" data-icon="icon-zhanghu"></i><cite>个人资料</cite></a></dd>
                            <dd><a href="javascript:;" data-url="page/user/changePwd.html"><i class="iconfont icon-shezhi1" data-icon="icon-shezhi1"></i><cite>修改密码</cite></a></dd>
                            <dd><a href="javascript:;"><i class="iconfont icon-loginout"></i><cite>退出</cite></a></dd>
                        </dl>
                    </li>
                </ul>
            </div>
            <div class="layui-col-md12">

                <div class="layui-side layui-bg-black">
                    <div class="user-photo" style="z-index:-1;">
                        <a class="img" title="我的头像">
                            <img src="~/Files/images/true.jpg" />
                        </a>
                        <p>你好！@{ string username = Seesion.UserName == null ? "Admin" : Seesion.UserName; <span class="userName">@username </span> }, 欢迎登录</p>
                    </div>
                    <ul class="layui-nav layui-nav-tree layui-nav-side" style=" z-index:-99; padding-top:10%;">
                        <li class="layui-nav-item layui-nav-itemed">
                            <a href="javascript:;">问卷管理</a>
                            <dl class="layui-nav-child">
                                <dd>
                                    
                                    <a id="default" data-url="@Url.Action("AddSurvey","Admin")" data-id="11" data-title="添加问卷" href="javascript:void();" class="site-demo-active" data-type="tabAdd">添加问卷</a>
                                </dd>
                                <dd>
                                    <a data-url="@Url.Action("LookSurvey","Home")" data-id="22" data-title="查看问卷" href="javascript:void();" class="site-demo-active" data-type="tabAdd">查看问卷</a>
                                </dd>
                            </dl>
                        </li>
                        <li class="layui-nav-item">
                            <a href="javascript:;">网页布局</a>
                            <dl class="layui-nav-child">
                                <dd>
                                    <a data-url="" data-id="33" data-title="页面显示" href="@Url.Action("Index","ShowText")" target="_blank" class="site-demo-active" data-type="tabAdd">页面显示</a>
                                </dd>
                            </dl>
                        </li>
                        <li class="layui-nav-item">
                            <a href="javascript:;">客户信息</a>
                            <dl class="layui-nav-child">
                                <dd>
                                    <a data-url="@Url.Action("Exhibition","Admin")" data-id="44" data-title="数据报表" href="javascript:void();" target="_blank" class="site-demo-active" data-type="tabAdd">数据报表</a>
                                </dd>
                            </dl>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="layui-col-md10 layui-col-md-offset2">
                <div class="layui-tab" lay-filter="demo" lay-allowclose="true" style="  width:100%; margin-left:-1%;  ">
                    <ul class="layui-tab-title"></ul>
                    <div class="layui-tab-content">                        
                    </div>
                </div>
            </div>
            <div class="layui-col-md10 layui-col-md-offset2" style="text-align:center;">
                ©@DateTime.Now.Year - 琦品
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/layui/layui.js"></script>
    <script src="~/js/bodyTabs.js"></script>
    <script>


        showTree();
    </script>
</body>
</html>